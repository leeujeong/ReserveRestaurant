<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.reserve.restaurant.repository.UserRepository">
	
	<insert id="insertUser" parameterType="com.reserve.restaurant.domain.User">
		INSERT INTO USERTABLE
		VALUES(USERTABLE_SEQ.NEXTVAL, #{id}, #{pw}, #{user_name}, #{user_tel}, #{user_grade},#{user_date},#{user_hbd},#{state},#{point},#{user_email} )
	</insert>
	
	<select id="login" parameterType="com.reserve.restaurant.domain.User" resultType="com.reserve.restaurant.domain.User">
		SELECT USER_NO, ID, PW, USER_GRADE, STATE, POINT
		  FROM USERTABLE
		 WHERE ID = #{id} AND PW = #{pw}
	</select>
</mapper>