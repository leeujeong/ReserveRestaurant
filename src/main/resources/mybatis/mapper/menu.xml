	<insert id="addMenu" parameterType="Menu">
    	INSERT into menu (
    		menu_no, 
    		menu_name, 
    		menu_price, 
    		res_no
    	) values (
    		menu_no_seq.nextval,
    		#{menuName},
	        #{menuPrice},
	        #{resNo}
	    )
	</insert>
	
	
	
	<!-- 메뉴불러오기 -->
	<select id="selectMenu" parameterType="Long" resultType="Menu">
		SELECT menu_no, menu_name, menu_price, res_no
		  FROM menu
		 WHERE res_no = #{resNo}
	</select>
	
	<!-- 메뉴 수정 -->
	<delete id="menuDelete" parameterType="Long">
		DELETE 
		  FROM MENU
		 WHERE menu_no = #{menuNo}
	</delete> 
	
</mapper>