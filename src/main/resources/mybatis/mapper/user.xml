<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.reserve.restaurant.repository.UserRepository">
	
	
	
	
	
	
	
	<select id="selectUserById" parameterType="String" resultType="User">
		SELECT USER_NO, ID, PW, USER_NAME, USER_EMAIL, STATE, USER_DATE
		  FROM USERTABLE
		 WHERE ID = #{id}
	</select>
	
	
	<select id="selectUserByEmail" parameterType="String" resultType="User">
		SELECT USER_NO, ID, PW, USER_NAME, USER_EMAIL, STATE, USER_DATE
		  FROM USERTABLE
		 WHERE USER_EMAIL = #{userEmail}
	</select>
	
	<insert id="insertUser" parameterType="User">
		INSERT INTO USERTABLE
		VALUES(USERTABLE_SEQ.NEXTVAL, #{id}, #{pw}, #{user_name}, #{user_tel}, 'Bronze', SYSDATE ,#{user_hbd}, 1 , 1000 , #{user_email} )
	</insert>
	
